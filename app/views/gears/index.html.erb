<div class = "center jumbotron">
  <p id="notice"><%= notice %></p>

<h1>Listing Gears</h1>

<table class = "table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Geartype</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gears.each do |gear| %>
      <tr>
        <td><%= gear.name %></td>
        <td><%= gear.description %></td>
        <td><%= gear.geartype_id %></td>
        <td><%= link_to 'Show', gear %></td>
        <td><%= link_to 'Edit', edit_gear_path(gear) %></td>
        <td><%= link_to 'Destroy', gear, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Gear', new_gear_path %>

</div>
