  <div class="page-header">
        <h2> Gears </h2>
    </div>
<!-- row -->
    <div class = "row"  style="margin: 10px">
        <%  @gears.each do |gear| %>
        <!-- column -->
        <div class= "col-xs-12 col-sm-4">
            <div class= "">
          <a href = <%=gear_path(gear)%>>
            <%= image_tag gear.avatar.url(:medium),class:"img-responsive img-rounded " %>
            </a>
            <div class="caption">
            <h3>
            <%= link_to gear.name, gear_path(gear) %>
            </h3>
            <p>Description: <br><%=gear.description %></p>
        </div>
        </div>
    </div>
        <% end %>

