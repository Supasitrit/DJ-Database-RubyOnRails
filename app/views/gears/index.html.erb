<div class="jumbotron"style="margin-top:50px">

  <p id="notice"><%= notice %></p>

  <div style="">
    
    <% if user_signed_in? %>
    <a href = <%=new_gear_path%>><button class = "btn btn-success btn-lg" >Add New Gear</button>
    </a>
    <% else %>
        <p> Log in to submit a gear!!</p>
    <% end %>
    </div>

<!-- GEARS -->
<div class="" style="margin: 10px" >
  <div class="page-header">
        <h2> Gears </h2>
    </div>
<!-- row -->
    <div id="masonry-container" class="transitions-enabled infinite-scroll clearfix">
        <%  @gears.each do |gear| %>
        <!-- column -->
        <div class= "box col3" >
        <div class= "">
          <a href = <%=gear_path(gear)%>>
            <%= image_tag gear.avatar.url(:medium),class:"img-responsive img-rounded ",style:"margin-buttom:10px" %>
            </a>
            <div class="caption">
            <h3>
            <%= link_to gear.name, gear_path(gear) %>
            </h3>
            <!-- <p>Description: <br><%=gear.description %></p> -->
        </div>
        </div>
    </div>
        <% end %>

    </div>

</div>
