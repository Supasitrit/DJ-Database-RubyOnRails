<p id="notice"><%= notice %></p>

<h1>Listing Gears</h1>

<table>
  <thead>
    <tr>
      <th>Type</th>
      <th>Text</th>
      <th>Name</th>
      <th>Text</th>
      <th>Details</th>
      <th>Text</th>
      <th>Id</th>
      <th>Integer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @gears.each do |gear| %>
      <tr>
        <td><%= gear.type %></td>
        <td><%= gear.text %></td>
        <td><%= gear.name %></td>
        <td><%= gear.text %></td>
        <td><%= gear.details %></td>
        <td><%= gear.text %></td>
        <td><%= gear.id %></td>
        <td><%= gear.integer %></td>
        <td><%= link_to 'Show', gear %></td>
        <td><%= link_to 'Edit', edit_gear_path(gear) %></td>
        <td><%= link_to 'Destroy', gear, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

