<div class="jumbotron">
    <div class="container">
    	<h1>Welcome to DJDB</h1>	
    	<p>DJDB breaks down the gear, tools, and products used by artists, pros, and influencers in their craft.</p>
    </div>
</div>
<!-- DJS -->
<div class="jumbotron">
	<h2> DJs </h2>
<!-- row -->
    <div class = "row">
        <!-- <div class="clearfix visible-xs-block"></div> -->
        <%  @djs.each do |dj| %>
        <!-- column -->
        <div class= "col-xs-12 col-sm-4" >
            <div class="thumbnail">
            <a href = <%=dj_path(dj)%>>
            <!--<%= image_tag( dj.name+".jpg", :alt => "djs-images", class:"img-responsive", style: "min-height: auto")%>-->
            <%= image_tag dj.avatar.url(:medium),class:"img-responsive img-rounded" %>
            </a>
            <div class="caption">
            <h3>
            <%= link_to dj.name, dj_path(dj) %>
            </h3>
            <p>Genre: <br><%=dj.genre %></p>
        </div>
    </div>
          </div>
        <% end %>
    </div>
<a href = <%=djs_path%>>
<button type="button" class="btn btn-default btn-lg">
	Full Dj List
  <!--<%= link_to 'Full Dj List', djs_path %>-->
</button>
</a>
</div>
<!-- DJs -->
