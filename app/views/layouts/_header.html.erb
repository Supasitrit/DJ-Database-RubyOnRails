<header class="navbar navbar-fixed-top navbar-inverse" id = "header">
  <div class="container">
    <%= link_to "DJDatabase", root_path, class: "navbar-brand" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li role="presentation">
              <%= link_to "Home", root_path%>
            </li>
            <li role="presentation">
              <%= link_to "About", about_path %>
            </li>
            <li role="presentation">
              <%= link_to "Contact", contact_path %>
            </li>
        <% if user_signed_in? %>
              <li class="divider"></li>
              <li>
                <li><%= link_to current_user.email, user_path(id: current_user.id) %></li>
              <li><%= link_to "Log Out",destroy_user_session_path, :method => :delete  %></li>
              </li>
        <% else %>
          <li><%= link_to "Log In", new_user_session_path %></li>
          <li><%= link_to "Create Account",new_user_registration_path %></li>
        <% end %>
        <%= form_tag(djresult_path, :method => "get", class: "navbar-form navbar-right", role:"serach") do %>
        <div class="form-group">
          <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search Djs" %>
          <button class="btn btn-default" type="submit">Submit<i class="icon-search"></i></button>
        </div>
      <% end %>
      </ul>
    </nav>
  </div>
</header>