<%= simple_form_for(@dj) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name , class: "form-control"%>
    <%= f.input :description , class: "form-control"%>
    <%= f.input :genre , class: "form-control"%>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
