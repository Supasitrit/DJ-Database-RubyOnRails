<div class="row">
<div class="col-md-4"></div>
  <div class="col-md-6">

  <p id="notice"><%= notice %></p>

<div class="container text-center ">
<!--<%= image_tag( @dj.name+".jpg", :alt => "djs-images",class:"img-responsive img-rounded") %> -->
<%= image_tag @dj.avatar.url(:medium),class:"img-responsive img-rounded" %>
</div>
<h1>
  <strong>
  <%= @dj.name %>
  </strong>
</h1>

<p>
  <strong>Description:</strong>
  <%= @dj.description %>
</p>

<p>
  <strong>Genre:</strong>
  <%= @dj.genre %>
</p>
<p>
  <strong>ID:</strong>
  <%= @dj.id %>
</p>
<% if user_signed_in? %>
	<%= link_to 'Destroy', @dj, method: :delete, data: { confirm: 'Are you sure?' } %>
	<%= link_to 'Edit', edit_dj_path(@dj) %> |
	<%= link_to 'Back', djs_path %>
<% else %>
<% end %>



<div class="col-md-2"></div>


</div>

</div>



<div class = "">
  <div class="page-header">
    <h3>Gears <%= @dj.name %> Use:</h3><br>
  </div>
  <% if @dj.gears.count == 0 %>
  <p> This DJ have no recorded gear. You can add one!! </p>
  <%else%>
  <% @dj.gears.each do |gear| %>
    <h2><%= link_to gear.name, gear_path %></h2><br>
  <% end %>
  <% end %>

</div>

<div class = "">
  <div class="page-header">
    <h3> Comments on this DJ</h3>
  </div>
  <%= commontator_thread(@dj) %>
  </div>