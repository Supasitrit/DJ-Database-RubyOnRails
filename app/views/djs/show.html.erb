  </div>
  <% if @dj.gears.count == 0 %>
  <p> This DJ have no recorded gear. You can add one!! </p>
  <%else%>
  <% @dj.gears.each do |gear| %>
  <div class= "col-xs-12 col-sm-4">
            <div class= "">
                <a href = <%=gear_path(gear)%>>
                  <%= image_tag gear.avatar.url(:medium),class:"img-responsive img-rounded " %>
                </a>
                <div class="caption">
                <h3>
                  <%= link_to gear.name, gear_path(gear) %>
                </h3>
                <p>Description: <br><%=gear.description %></p>
            </div>
        </div>
  </div>
  <% end %>
  <% end %>

