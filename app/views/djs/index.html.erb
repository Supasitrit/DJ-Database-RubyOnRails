
<h1>Top Artist</h1> 
<% if user_signed_in? %>
<button class = "btn btn-success btn-lg"><%= link_to 'Add New Dj', new_dj_path %></button>
<% end %>
<br>
<br>

<script type="text/javascript">
    <% @djs.each do |dj| %>
    console.log("<%= dj.name %>");
    console.log("<%= dj.id %>");
    console.log("<%= dj.description %>");
    console.log("<%= dj.genre %>");
    <% end %>
</script>

<div class = "col-sm-12">
    <% @djs.each do |dj| %>
      <div class= "col-md-4">
        <a href = <%=dj_path(dj)%>>
        <%= image_tag( dj.name+".jpg", :alt => "djs-images", class:"img-responsive", style: "width: 100%")%>
        <h1><strong><%= link_to dj.name, dj_path(dj) %></strong></h1>
        </a>
      </div>
    <% end %>
</div>
<br>
<div class="apple_pagination">
    <div class="page_info">
      <%= page_entries_info @djs %>
    </div>
    <%= will_paginate @djs%>
</div>
