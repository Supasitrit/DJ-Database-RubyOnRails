
<h1>Top Artist</h1> 
<% if user_signed_in? %>
<button class = "btn btn-success btn-lg"><%= link_to 'Add New Dj', new_dj_path %></button>
<% end %>
<br>
<br>



<div class = "container-fluid">
  <div class = "row-fluid" style=" height:auto max-width:33% ">
  <% @djs.each do |dj| %>
  <h1><strong><%= link_to dj.name, dj_path(dj) %></strong></h1>
  
    <div class= "span2" >
    <a href = <%=dj_path(dj)%>>
    <%= image_tag( dj.name+".jpg", :alt => "djs-images", class:"img-responsive", style: "width: 100%")%>
    </a>
    
    </div>
  <% end %>
  </div>
</div>
<br>
<div class="apple_pagination">
    <div class="page_info">
      <%= page_entries_info @djs %>
    </div>
    <%= will_paginate @djs, :container => false %>
</div>



