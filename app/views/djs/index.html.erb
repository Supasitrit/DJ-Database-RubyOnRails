<div class="">
    <div style="">
    
    <% if user_signed_in? %>
    <a href = <%=new_dj_path%>><button class = "btn btn-success btn-lg" >Add New Dj</button>
    </a>
    <% else %>
        <p> Log in to submit a Dj!!</p>
    <% end %>
    </div>

    <!-- DJS -->
<div class="" style="margin: 10px">
    <div class="page-header">
        <h2> DJs </h2>
    </div>
    
<!-- gallery -->
    <div class = "container" style="margin: 10px" >
        <!-- <div class="clearfix visible-xs-block"></div> -->
        <%  @djs.each do |dj| %>
        <!-- column -->
        <div class= "col-xs-12 col-sm-2">
            <div class="">
            <a href = <%=dj_path(dj)%>>
            <!--<%= image_tag( dj.name+".jpg", :alt => "djs-images", class:"img-responsive", style: "min-height: auto")%>-->
            <%= image_tag dj.avatar.url(:medium),class:"img-responsive img-rounded", style: "margin-bottom:10px" %>
            </a>
            <div class="caption">
            <h3>
            <%= link_to dj.name, dj_path(dj) %>
            </h3>
            <p><strong>Genre: </strong><br><%=dj.genre %></p>
        </div>
    </div>
          </div>
        <% end %>
    </div>

</div>
<!-- DJs -->
    
    <div class="apple_pagination">
        <div class="page_info">
          <%= page_entries_info @djs %>
        </div>
        <%= will_paginate @djs%>
    </div>


</div>