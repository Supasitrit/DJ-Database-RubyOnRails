<div class="center jumbotron">
    <h1>DJDB</h1> 
    <% if user_signed_in? %>
    <!-- <button class = "btn btn-success btn-lg"><%= link_to 'Add New Dj', new_dj_path %></button> -->
    <%= button_tag( "Add new dj",class: "btn btn-success btn-lg", href: new_dj_path)%>





    <% end %>
    <br>
    <br>

    <div class = "col-sm-12">
        <% @djs.each do |dj| %>
          <div class= "col-md-4">
            <a href = <%=dj_path(dj)%>>
            <%= image_tag( dj.name+".jpg", :alt => "djs-images", class:"img-responsive", style: "width: 100%")%>
            <%= link_to dj.name, dj_path(dj) %>
            </a>
          </div>
        <% end %>
    </div>
    <br>
    <div class="apple_pagination">
        <div class="page_info">
          <%= page_entries_info @djs %>
        </div>
        <%= will_paginate @djs%>
    </div>
    <br>
</div>